!<doctype html>
  <html>
    <head>
      <img src='/img/logo.png' alt='Meadowlark Tavel Logo' />
    </head>
    <body>
      {{{body}}}

      {{#if flash}}
        <div class='alert alert-dismissible alert-{{flash.type}}'>
          <button
            type='button'
            class='close'
            data-dismiss='alert'
            aria-hidden='true'
          >x</button>
          <strong>{{flash.intro}}</strong>
          {{{flash.message}}}
        </div>
      {{/if}}
    </body>
  </html>
</doctype>